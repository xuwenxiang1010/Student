<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.student.schoolpersonnel.dao.PersonnelInformationDao">
    <insert id="save" parameterType="com.bootdo.student.schoolpersonnel.pojo.PersonnelInformation" useGeneratedKeys="true" keyProperty="id">
        insert into sch_personnel_information
        (`name_id`,
         `in_time`,
         `out_time`,
         `create_by`,
         `create_time`,
         `state`
         )
        values
        (
        #{nameId},
        #{inTime},
        #{outTime},
        #{createBy},
        #{createTime},
        #{state}
        )
    </insert>
    <update id="update" parameterType="com.bootdo.student.schoolpersonnel.pojo.PersonnelInformation">
        update sch_personnel_information
        <set>
            <if test="nameId != null">`name_id` = #{nameId},</if>
            <if test="inTime != null">`in_time` = #{inTime},</if>
            <if test="outTime != null">`out_time` = #{outTime},</if>
            <if test="updateBy != null">`update_by` = #{updateBy},</if>
            <if test="updateTime != null">`update_time` = #{updateTime},</if>
            <if test="state != null">`state` = #{state},</if>
        </set>
        where id = #{id}
    </update>
    <update id="remove" parameterType="com.bootdo.student.schoolpersonnel.pojo.PersonnelInformation">
        update sch_personnel_information
        <set>
            <if test="deleted != null">`deleted` = #{deleted}</if>
        </set>
        where id = #{id}
    </update>

    <select id="list" resultType="com.bootdo.student.schoolpersonnel.pojo.PersonnelInformation">
        select spi.*,st.name
        from sch_personnel_information spi left join sys_stu st on spi.name_id = st.stu_id
        where spi.deleted = 0
        <where>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by create_time desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="get" resultType="com.bootdo.student.schoolpersonnel.pojo.PersonnelInformation">
        select spi.id, st.stu_id,spi.in_time, spi.out_time,spi.state,st.name
        from sch_personnel_information spi left join sys_stu st on spi.name_id = st.stu_id
        where id = #{id}
    </select>
</mapper>